<Page
    x:Class="Passwordless_Authenticator.TestUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Passwordless_Authenticator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#130041"
    >


    <Border CornerRadius="20" BorderThickness="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="400"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- START: TITLE -->
            <Border Height="100" BorderBrush="Wheat" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                Text="Asym Auth Client" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                FontSize="40" 
                Margin="0,0,0,0" 
                Foreground="White"
                Grid.Column="1"
                Grid.Row="0"
            />
                </Grid>
            </Border>
            <!-- END: TITLE-->
            
            <!-- START: BUTTONS AND TEXTBOXES -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
                <Border 
                    Height="150"
                    Width="300"
                    CornerRadius="10"
                    Margin="20,0,20,0"
                    x:Name="dummyBttnBrdr"
                    >
                    <Button                                           
                        VerticalAlignment="Stretch"
                        BorderThickness="0"
                        CornerRadius="10" 
                        HorizontalAlignment="Stretch"
                        x:Name="dummyBttn"
                    >
                        <TextBlock Text="Dummy Button" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" FontSize="27" TextWrapping="Wrap" Foreground="White"/>

                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="#594BD9"  Offset="0.0"/>
                                <GradientStop Color="#9951BE"  Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Border>
                <Border 
                    Height="150"
                    Width="300"
                    CornerRadius="10"
                    Margin="20,0,20,0"
                    x:Name="dummyBttnBrdr2"
                    >
                    <Button                                           
                        VerticalAlignment="Stretch"
                        BorderThickness="0"
                        CornerRadius="10" 
                        HorizontalAlignment="Stretch"
                        x:Name="dummyBttn2"
                    >
                        <TextBlock Text="Dummy Button2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" FontSize="27" TextWrapping="Wrap"/>

                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="#594BD9"  Offset="0.0"/>
                                <GradientStop Color="#9951BE"  Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Border>
                <Border 
                    Height="30"
                    Width="300"
                    CornerRadius="10"
                    Margin="20,0,20,0"
                    x:Name="dummyBttnBrdr3"
                    >
                    <PasswordBox></PasswordBox>
                </Border>
            </StackPanel>
            <!-- END: MESSAGE BOX-->


            <!--START: MESSAGE BOX placed on row 2-->

            <Border Height="200" Width="600" CornerRadius="10" Grid.Row="2" BorderBrush="Wheat" BorderThickness="1" Background="#44247E">
                <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center">Sample Text Put Message Box Here</TextBlock>
            </Border>


            <!--END: MESSAGE BOX -->

        </Grid>
    </Border>
</Page>
